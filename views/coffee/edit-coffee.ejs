<% include ../partials/header.ejs %>

	<div id="drop" class="container">
			<div id= "new">
				<h1>Edit <%=coffee.name%></h1>
				
			
				<form action="/menu/coffee/<%=coffee._id%>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="ID">ID:</label>
						<input id="ID" type="number" name="coffee[id]" value="<%=coffee.id%>" class="form-control w-100 pl-2">
					</div>
					<div class="form-group">
						<label for="NAME">Title:</label>
						<input id="NAME" type="text" name="coffee[name]" value="<%=coffee.name%>" class=" form-control w-100 pl-2" required>
					</div>
					<div class="form-group">
						<label for="IMAGE">Image:</label>
						<input id="IMAGE" type="text" name="coffee[image]" value="<%=coffee.image%>"  class="form-control w-100 pl-2" required>
					</div>
					<div class="form-group">
						<label for="COST">Cost:</label>
						<input id="COST" type="number" name="coffee[price]" value="<%=coffee.price%>" class="form-control w-100 pl-2" required>
					</div>
					<div class="form-group">
						<label for="DESC">Description:</label>
						<textarea id="DESC" name="coffee[description]" class="form-control  w-100 pb-5" ><%=coffee.description%></textarea>
					</div>
					<button class="btn btn-success btn-md btn-block">UPLOAD</button>
				</form>
				<a href="/menu/coffee/<%=coffee._id%>">Go Back</a>
			</div>
	</div>		


<% include ../partials/footer.ejs %>