<% include ../partials/header.ejs %>
	<div id="drop" class="container">
			<div class= "new">
				<h1 class="text-center">New Coffee Menu</h1>
				
			
				<form action="/menu/coffee" method="POST">
					<div class="form-group">
						<label for="ID">ID:</label>
						<input id="ID" type="number" name="coffee[id]"  value="3" class="form-control w-100 pl-2">
					</div>
					<div class="form-group">
						<label for="NAME">Title:</label>
						<input id="NAME" type="text" name="coffee[name]" placeholder="Menu Title" class=" form-control w-100 pl-2" required>
					</div>
					<div class="form-group">
						<label for="IMAGE">Image:</label>
						<input id="IMAGE" type="text" name="coffee[image]" placeholder="Image Url" class="form-control w-100 pl-2" required>
					</div>
					<div class="form-group">
						<label for="COST">Cost:</label>
						<input id="COST" type="number" name="coffee[price]"  placeholder="Cost" class="form-control w-100 pl-2" required>
					</div>
					<div class="form-group">
						<label for="DESC">Description:</label>
						<textarea id="DESC" name="coffee[description]"  placeholder="Description" class="form-control w-100 pb-5" required></textarea>
					</div>
					<button class="btn btn-success btn-md btn-block">UPLOAD</button>
				</form>
				<a href="/menu/cakes">Go Back</a>
			</div>
	</div>		


<% include ../partials/footer.ejs %>